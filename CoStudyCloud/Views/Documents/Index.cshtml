@{
    ViewData["Title"] = "Documents";
}

<section class="table-section">
    <div class="row justify-content-center">
        <div class="col-12 mb-5">
            <div class="section-title text-center">
                <h2>@ViewData["Title"]</h2>
            </div>
            <div class="section-buttons">
                <a asp-action="Upload" class="btn btn-success">
                    <span class="fa fa-plus"></span>
                    Upload
                </a>
            </div>
        </div>
        <div class="col-12">
            <table id="jq-table" class="table table-striped table-bordered dt-responsive">
                <thead>
                    <tr>
                        <th>
                            #
                        </th>
                        <th>
                            Title
                        </th>
                        <th>
                            Uploaded by
                        </th>
                        <th class="no-sort">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr role="row" class="odd">
                        <td>1</td>
                        <td>First file</td>
                        <td>Elliot</td>
                        <td>
                            <a class="btn btn-primary table-btn" title="Edit">
                                <span class="fa fa-pen"></span>
                            </a>
                            <a class="btn btn-danger table-btn" title="Delete">
                                <span class="fa fa-trash"></span>
                            </a>
                        </td>
                    </tr>
                    <tr role="row" class="even">
                        <td>2</td>
                        <td>Second file</td>
                        <td>Chris</td>
                        <td>
                            <a class="btn btn-primary table-btn" title="Edit">
                                <span class="fa fa-pen"></span>
                            </a>
                            <a class="btn btn-danger table-btn" title="Delete">
                                <span class="fa fa-trash"></span>
                            </a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</section>
